{
  "name": "commonform-cli",
  "description": "compose, verify, and share form contracts at the command line",
  "version": "0.4.0-prerelease",
  "author": "Kyle E. Mitchell <kyle@kemitchell.com> (http://kemitchell.com)",
  "bin": {
    "commonform": "./bin/commonform"
  },
  "bugs": "https://github.com/commonform/commonform-cli/issues",
  "dependencies": {
    "commonform-docx": "^0.4.2",
    "commonform-lint": "^0.4.1",
    "commonform-markup": "^0.4.0",
    "commonform-normalize": "^0.4.0",
    "commonform-serialize": "^0.4.0",
    "commonform-terminal": "^0.4.3",
    "concat-stream": "^1.4.8",
    "docopt": "^0.6.2",
    "english-list": "^1.0.0-prerelease-1"
  },
  "devDependencies": {
    "chai": "^2.2.0",
    "istanbul": "^0.3.13",
    "jscs": "^1.12.0",
    "jshint": "^2.7.0",
    "mocha": "^2.2.4",
    "object-assign": "^2.0.0",
    "stream-buffers": "^2.1.0"
  },
  "homepage": "https://commonform.github.io",
  "keywords": [
    "contracts",
    "document assembly",
    "knowledge management",
    "law"
  ],
  "license": "Apache-2.0",
  "main": "source/index",
  "preferGlobal": true,
  "repository": "commonform/commonform-cli",
  "scripts": {
    "coverage": "istanbul check-coverage --config .dotfiles/istanbul.yml coverage/coverage.json",
    "lint": "jshint --config .dotfiles/jshint.json source test && jscs --config .dotfiles/jscs.json source test",
    "precommit": "npm run lint && npm run coverage",
    "precoverage": "istanbul cover --config .dotfiles/istanbul.yml -- _mocha --opts .dotfiles/mocha.opts",
    "test": "mocha --opts .dotfiles/mocha.opts"
  }
}
